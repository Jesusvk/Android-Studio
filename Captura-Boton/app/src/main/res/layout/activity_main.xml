<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@android:color/background_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ingrese numero"
        android:id="@+id/label_a"
        android:layout_above="@+id/campo_a"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/campo_a"
        android:layout_gravity="center"
        android:maxLength="8"
        android:layout_above="@+id/label_b"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/label_b"
        android:text="Ingrese numero"
        android:layout_above="@+id/campo_b"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/campo_b"
        android:layout_gravity="center"
        android:maxLength="8"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:text="SUMAR"
        android:id="@+id/button"
        android:background="@color/background_material_dark"
        android:onClick="sumar"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_above="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="3dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Restaurar"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffadaeac"
        android:onClick="restaura"
        android:textColor="#fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView"
        android:text="Resultado"
        android:layout_above="@+id/resultado"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="16"
        android:id="@+id/resultado"
        android:layout_gravity="center"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:text="RESTAR"
        android:id="@+id/button3"
        android:background="@color/background_material_dark"
        android:onClick="resta"
        android:textColor="#fff"
        android:textStyle="bold|normal"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:text="DIVIDIR"
        android:id="@+id/button4"
        android:background="@color/background_material_dark"
        android:onClick="division"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="3dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:text="MULTIPLICAR"
        android:id="@+id/button5"
        android:background="@color/background_material_dark"
        android:onClick="multiplica"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:id="@+id/imageView"
        android:src="@mipmap/c"
        android:layout_alignBottom="@+id/label_a"
        android:layout_toRightOf="@+id/button"
        android:layout_alignRight="@+id/campo_a"
        android:layout_alignEnd="@+id/campo_a" />

</RelativeLayout>
